{
  "name": "local-game-server",
  "version": "1.0.0",
  "description": "A local multiplayer game server with themed UI",
  "main": "server.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore 'data/*' --ignore 'logs/*'",
    "build": "echo 'No build step required for Node.js'",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --coverage --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:load": "artillery run tests/load/scenario.yml",
    "test:fuzz": "node tests/fuzz/fuzz.js",
    "test:all": "npm run test && npm run test:load && npm run test:fuzz",
    "lint": "node scripts/security-lint.js",
    "audit": "npm audit --audit-level=high || true",
    "security:scan": "node scripts/security-lint.js --audit-only",
    "benchmark": "node scripts/benchmark.js",
    "docker:build": "docker build -t homegameserver:latest .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "ioredis": "^5.3.2",
    "multer": "^2.0.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "proper-lockfile": "^4.1.2",
    "seedrandom": "^3.0.5",
    "session-file-store": "^1.5.0",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "artillery": "^2.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "socket.io-client": "^4.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
