{
  "name": "homegameserver",
  "version": "2.0.0",
  "description": "Simplified local multiplayer game server for home/LAN gaming",
  "main": "server.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore 'data/*' --ignore 'logs/*'",
    "test": "echo 'Tests coming soon' && exit 0",
    "docker:build": "docker build -t homegameserver:latest .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "seedrandom": "^3.0.5",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "socket.io-client": "^4.7.2"
  }
}
